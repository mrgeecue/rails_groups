
<p>Welcome <%= current_user.first_name %> <%= current_user.last_name %>!</p>
<p>Here are the organizations you can join!</p>

<%= render 'form' %>


<% @organizations.each do |org| %>
  <h4><%= link_to org.name, organization_path(org.id) %></h4>
  <p>Members: <%= @members.where(organization_id: org.id).count %></p>
  <%= org.description %>
  <% end %>
